<header class="navbar navbar-expand-lg bg-white py-2 position-relative z-1">
  <h1 class="fs-6 position-absolute top-0 start-50 translate-middle-x">BlablaVelo</h1>
  <div class="container p-0 p-md-auto">
    <div class="align-items-center">
      <a href=" {{ path('app_home') }}" class="d-inline-flex link-body-emphasis text-decoration-none p-3">
        <img src="{{ asset('assets/images/blablabike.webp') }}" alt="Logo Blabla VÃ©lo" />
        </a>
    </div>

    <div class="w-auto text-center d-flex align-items-center">
      {% if app.user is not empty %}
        <a class="btn btn-primary text-white rounded d-inline-block fs-6 px-4 py-2 me-3" href=" {{ path('app_new_ride') }}" title="ajouter une sortie">Ajouter une sortie</a>
        {% if user.profileImage is not null %}
          <img id="menu-button" class="profile rounded-circle mx-2 border border-2 border-primary" src="{{ asset('uploads/images/users/' ~ user.profileImage.getFileName) }}" alt="photo de profil" />
        {% else %}
          <div id="menu-button" class="profile mx-2 account rounded-circle border border-2 border-primary d-flex justify-content-center align-item-center">
            {% include '_partials/_avatar.html.twig' %}
          </div>
        {% endif %}
      {% else %}
        {% if app.request.attributes.get('_route') is not same as('app_login') and app.request.attributes.get('_route') is not same as('app_register') %}
          <a class="btn px-1 px-md-3 mx-2 h-auto fs-@6 fs-md-4 col btn-primary border-secondary text-white" href="{{ path('app_login') }}">CONNEXION</a>
        {% endif %}
      {% endif %}
    </div>
  </div>
</header>
