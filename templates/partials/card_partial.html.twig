<a class="col-md-2 rounded-3 m-2 p-3 border-multiple ride-card d-block" href="/ride/{{ ride.getId }}">
{# <div class="col-md-2 rounded-3 p-3 border-multiple ride-card"> #}
  <h3 class="text-center">{{ ride.getTitle }}</h3>
  <img class="w-100 border-multiple border-grey my-3" src="" alt="map" />
  <div class="row">
    <ul class="col-5">
      <li>🚴 : {{ ride.getPractice }}</li>
      <li>🎯 : {{ ride.getMind }}</li>
      <li>🎯 : {{ ride.getUserCreator }}</li>
      <li>Dist : {{ ride.getDistance }} kms</li>
      <li>D+ : {{ ride.getAscent }} m</li>
    </ul>
    <ul class="col-7">
      <li>📍 : {{ ride.getCity }}</li>
      <li>🕗 : {{ ride.getDate|date('d/m/Y H:i:s') }}</li>
      <li>👤 :  {{ ride.getUserParticipant|length }} / {{ ride.getMaxRider }}</li>
      <li>🗣️ : pipelette</li>
    </ul>
  </div>
{# </div> #}
</a>