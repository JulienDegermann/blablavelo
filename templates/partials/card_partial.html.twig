<a class="col-md-6 col-lg-4 rounded-3 ride-card d-block" href="/ride/{{ ride.getId }}">
<div class="rounded-3 m-2 p-3 border-multiple ride-card position-relative"> 
    <div class="profile position-absolute participant d-flex flex-row-reverse">
      {% for user in ride.getUserParticipant %}
        {% if user.getFileName is not null %}
          <img 
            class="rounded-circle mx-2 border border-1 border-primary" 
            src="{{ asset('uploads/images/users/' ~ user.getFileName) }}" 
            alt="photo de profil de {{ user.getUsername }}" 
            title="{{ user.getUsername }}" >                    
        {% else %}
          <div class="mx-2 account rounded-circle border border-2 border-secondary d-flex justify-content-center align-item-center">
            {% include 'partials/avatar_partial.html.twig' %}
          </div>
        {% endif %}
      {% endfor %}
    </div>

  <h3 class="text-center fs-4">{{ ride.getTitle }}</h3>
  {% include "/partials/img_partial.html.twig" %}
  <div class="row">
    <ul class="col-6">
      <li>🚴 : {{ ride.getPractice }}</li>
      <li>🎯 : {{ ride.getMind }}</li>
      <li>Dist : {{ ride.getDistance }} kms</li>
      <li>D+ : {{ ride.getAscent }} m</li>
    </ul>
    <ul class="col-6">
      <li>📍 : {{ ride.getCity }}</li>
      <li>🕗 : {{ ride.getDate|date('d/m/Y H:i:s') }}</li>
      <li>👤 :  {{ ride.getUserParticipant|length }} / {{ ride.getMaxRider }}</li>
    </ul>
  </div>
  </div>
</a>