{% extends 'base.html.twig' %}

{% block main %}
  <section>
    <div class="container">
      <h1 class="text-center">Mot de passe oublié</h1>
      <div class="row w-50 m-auto">
        {{ form_start(form) }}
        {{ form_row(form.email) }}
        <input class="btn btn-secondary text-primary px-5 py-2 m-2" type="submit" name="pwd_recover" value="Réinitialiser le mot de passe" />
      </div>
    </div>
  </section>

  {{ form_end(form) }}
{% endblock %}
