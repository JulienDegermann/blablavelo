{% extends 'base.html.twig' %}

{% block main %}
  <section class="position-relative banner">
    <img class="h-100 w-100 object-fit-cover" src="{{ asset('assets/images/login.webp') }}"  alt="photo de cadenas" title="photo de cadenas"/>
    <div class="container position-absolute px-3 top-50 start-50 translate-middle">
      <div class="row">
          <h1 class="text-white text-center fs-1">Réinitialiser le mot de passe</h1>
      </div>
    </div>
  </section>

  <section class="my-3 my-md-5">
    <div class="container">
      <div class="row w-50 m-auto">
        {{ form_start(form) }}
        {{ form_row(form.password) }}
        <input class="btn btn-secondary text-primary px-5 py-2 m-2" type="submit" name="pwd_recover" value="Réinitialiser le mot de passe" />
        {{ form_errors(form.password) }}
        {{ form_end(form) }}
      </div>
    </div>
  </section>
{% endblock %}
