{% extends 'base.html.twig' %}

{% block main %}
  {% block mainTitle %}
    Réinitialiser le mot de passe
  {% endblock %}

  <section class="my-3 my-md-5">
    <div class="container">
      <div class="row w-50 m-auto">
        {{ form_start(form) }}
        {{ form_row(form.password) }}
        <input class="btn btn-secondary text-primary px-5 py-2 m-2" type="submit" name="pwd_recover" value="Réinitialiser le mot de passe" />
        {{ form_errors(form.password) }}
        {{ form_end(form) }}
      </div>
    </div>
  </section>
{% endblock %}
